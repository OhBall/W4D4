<h1> <%= @album.title %> </h1>

<% @album.attributes.each do |k, v| %>
  <% case k %>
  <% when "id", "created_at", "updated_at"  %>
  <% when "band_id" %>
    <%= "Band: #{Band.find(@album.band_id).name}" %>
  <% when "live?" %>
    <%="Recorded " + (v ? "live" : "in studio") %>
  <% else %>
  <%= "#{k}: #{v}" %>
  <% end %>
   <br>
<% end %>

<a href=" <%= band_url(@album.band_id) %> ">Back to Band</a>

<a href=" <%= edit_album_url %> "> Edit Album </a>
